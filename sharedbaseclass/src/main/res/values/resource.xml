<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="image_button_style_in_shared_header_view">
        <item name="android:layout_width">@dimen/image_button_size</item>
        <item name="android:layout_height">@dimen/image_button_size</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="subtitle_style_in_layout_fragment_edit">
        <item name="android:layout_marginStart">@dimen/subtitle_padding_start_in_layout_fragment_edit</item>
        <item name="android:layout_marginEnd">@dimen/subtitle_padding_end_in_layout_fragment_edit</item>
        <item name="android:layout_marginBottom">@dimen/subtitle_padding_top_in_layout_fragment_edit</item>
        <item name="android:textSize">@dimen/subtitle_text_size_in_layout_fragment_edit</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="edit_view_style_in_layout_fragment_edit"
        parent="subtitle_style_in_layout_fragment_edit">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">@dimen/subtitle_padding_top_in_layout_fragment_edit</item>
    </style>

    <style name="shared_list_item_left_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/shared_list_item_left_textview_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/shared_list_item_left_textview_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/shared_list_item_left_textview_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/shared_list_item_left_textview_margin_end</item>
        <item name="android:textSize">@dimen/shared_list_item_left_textview_textsize</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="shared_list_item_right_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/shared_list_item_right_textview_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/shared_list_item_right_textview_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/shared_list_item_right_textview_margin_end</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>