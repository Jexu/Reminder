<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/header_view_parent_view_padding_top_bottom"
    android:paddingBottom="@dimen/header_view_parent_view_padding_top_bottom"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/header_view_main_menu"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/header_view_main_menu_margin_left"
        android:layout_marginRight="@dimen/header_view_margin_right_and_left_between_view"
        android:background="@drawable/main_menu"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/header_view_left_arrow"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/header_view_margin_right_and_left_between_view"
        android:layout_marginRight="@dimen/header_view_margin_right_and_left_between_view"
        android:layout_toRightOf="@+id/header_view_main_menu"
        android:src="@drawable/left_arrow"
        android:scaleType="fitCenter"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/header_view_voice_input"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/header_view_margin_right_and_left_between_view"
        android:layout_marginRight="@dimen/header_view_margin_right_and_left_between_view"
        android:layout_toLeftOf="@+id/header_view_search"
        android:src="@drawable/save" />

    <TextView
        android:id="@+id/header_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/header_view_title_my_tasks"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/header_view_margin_right_and_left_between_view"
        android:layout_marginRight="@dimen/header_view_margin_right_and_left_between_view"
        android:layout_toLeftOf="@id/header_view_voice_input"
        android:layout_toRightOf="@+id/header_view_left_arrow" />

    <SearchView
        android:id="@+id/header_view_search"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/header_view_margin_right_and_left_between_view"
        android:layout_marginRight="@dimen/header_view_margin_right_and_left_between_view"
        android:layout_toLeftOf="@+id/header_view_add_new_task" />

    <ImageView
        android:id="@+id/header_view_add_new_task"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/header_view_add_new_task_margin_right"
        android:scaleType="fitCenter"
        android:src="@drawable/add" />

</RelativeLayout>